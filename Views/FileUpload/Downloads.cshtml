@model IEnumerable<dynamic>
<div class="wrapper">
    <div class="header">
        <h1>Загрузчик файлов</h1>
        <p>Здесь вывод всех файлов</p>
    </div>
    <div class="menu">
        <ul>
            <form action="/FileUpload/Index"><button type="submit"><h2>Загрузить</h2></button></form>
            <form action="/FileUpload/Downloads"><button type="submit"><h2>Скачать</h2></button></form>
        </ul>
    </div>
    <div class="main">
        <div class="downloads">

            @if(Model.Any())
            {
                foreach(var file in Model)
                {
                    <div class="download-item">
                        <h4>@file.Name</h4>
                        <p>Size: @file.Size</p>
                    </div>
                    <form action="/FileUpload/DownloadFile" method="get">
                        <input type="text" name="fileName" value="@file.Name" hidden>
                        <button type="submit" class="upload-button">Скачать</button>
                    </form>
                }
            }
        </div>
    </div>
</div>
<div class="footer">
    <p>&copy; 2024 fileUploader | moyemail@gmail.com</p>
</div>